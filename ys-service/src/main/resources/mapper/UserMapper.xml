<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ys.resource.UserMapper">

	<!--配置一个resultMap 指定返回的类型 -->
	<resultMap id="userResult" type="com.ys.api.model.User">
		<id column="id" property="id" />
		<result column="name" property="name" />
		<result column="age" property="age" />
		<result column="address" property="address" />
	</resultMap>
	
   <select id="selectUser" parameterType="com.ys.api.model.User" resultMap="userResult">
		select * from sys_user where account=#{account} and password=#{password}
	</select>
</mapper>